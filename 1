//
#include <iostream>
#define pi 3.14
int main()
{
    std::cout << "please enter the 'r' of the circle:" << std::endl;
    float r, m, a;
    std::cin >> r;
    if (r >= 1)
    {
        m = pi * r * r;
        a = 2 * pi * r;
    std::cout << "perimeter=" << m << std::endl << "area=" << a;
    }
    else if (r==0 || r<=-1 )
    {
        std::cout<<"undefined"<<std::endl;
    }

}
