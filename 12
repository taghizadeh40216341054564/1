//
#include <iostream>
using namespace std;
int main()
{
    cout<<"Please enter your numbers:";
    int a,b,c,d,f;
    cin>>a>>b;
    d=a;
    c=b;
    do{
        f=a%b;
        a=b;
        b=f;
    } while(f!=0);
    cout<<"B.M.M="<<a<<endl;
    cout<<"K.M.M="<<(c*d)/a;
}
